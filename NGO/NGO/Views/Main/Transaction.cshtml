@using NGO.Models.MappingClass
@{
    Layout = "_MainLayoutAll";
    List<DonationRecord> listTransaction = new List<DonationRecord>();

    if (ViewBag.listTransaction != null)
    {
        listTransaction = ViewBag.listTransaction;
    }
    Member member = new Member();
    member = ViewBag.Member;
    string mess = null;
    mess = TempData["Mess"] as string;
    int no = 1;
    int sum = 0;
}
<div class="page-title-area item-bg-14">
    <div class="container">
        <div class="page-title-content">
            <h2>Transaction</h2>
            @if (member != null)
            {
                <h4>@member.Name</h4>
            }
            <ul>
                <li>
                    <a href="/main/index">
                        Home
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </li>
                <li>Transaction</li>
            </ul>
        </div>
    </div>
</div>
<div class="project-area ptb-100-70">
    @if (!string.IsNullOrEmpty(mess))
    {
        <div class="alert alert-success text-center" role="alert">
            @mess
        </div>
    }
    <div class="container" style=" border: 1px;border-radius:5px;
        box-shadow: 6px 0px 6px 0px rgba(33, 33, 33, 0.25), -6px 0px 6px 0px rgba(33, 33, 33, 0.25), 0px 6px 6px 0px rgba(33, 33, 33, 0.25), 0px -6px 6px 0px rgba(33, 33, 33, 0.25);">

        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>
                        No
                    </th>
                    <th>
                        No Transaction
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Descriptions
                    </th>
                    <th>
                        Payment Type
                    </th>
                    <th>
                        Program
                    </th>
                </tr>
            </thead>
            @foreach (var item in listTransaction)
            {
                sum += item.Amount;
                <tr>
                    <td>
                        @(no++)
                    </td>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Date.ToShortDateString()
                    </td>
                    <td>
                        @item.Amount.ToString(("#,##0"))
                    </td>
                    <td>
                        @item.Descriptions
                    </td>
                    <td>
                        @item.PaymentType.Name
                    <td>
                        @item.Program.Name
                    </td>
                </tr>
            }
            <tr>
                <td class="font-weight-bolder">
                    Sum
                </td>
                <td>
                </td>
                <td>
                </td>
                <td class="font-weight-bolder">
                    @sum.ToString(("#,##0"))
                </td>
                <td>
                </td>
                <td>

                <td>
                </td>
            </tr>

        </table>
    </div>
</div>
