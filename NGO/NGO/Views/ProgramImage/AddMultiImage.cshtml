@model NGO.Models.MappingClass.Program


@{
    ViewData["Title"] = "Add";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddMultiImage" method="post"  enctype="multipart/form-data" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this)" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MultiFiles" class="control-label"></label>
                <P>You can select multiple file imagess</P>
                <input asp-for="MultiFiles" class="form-control" type="file" name="MultiFiles" multiple="multiple" />
                <span asp-validation-for="MultiFiles"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}